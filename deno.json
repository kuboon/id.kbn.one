{
  "nodeModulesDir": "auto",
  "tasks": {
    "serve": "deno serve --env -P server/deno-server.ts"
  },
  "workspace": [
    "server",
    "passkeys",
    "dpop"
  ],
  "imports": {
    "@hexagon/base64": "npm:@hexagon/base64@2.0.4",
    "@std/assert": "jsr:@std/assert@^1.0.15",
    "hono": "npm:hono@4.10.4"
  },
  "unstable": ["kv", "bundle"],
  "deploy": {
    "org": "kuboon-tokyo",
    "app": "id-kbn-one"
  },
  "permissions": {
    "default": {
      "env": [
        "RP_ID",
        "RP_NAME",
        "IDP_ORIGIN",
        "ORIGINS",
        "PUSH_CONTACT"
      ],
      "net": ["updates.push.services.mozilla.com"],
      "read": ["."],
      "write": ["./_data"]
    }
  }
}
