{
  "nodeModulesDir": "auto",
  "tasks": {
    "test": "deno fmt && deno lint && deno check && deno test -P",
    "dev": "deno task --cwd=main dev",
    "serve": "deno task --cwd=main serve"
  },
  "workspace": [
    "main",
    "passkeys",
    "dpop"
  ],
  "imports": {
    "@hexagon/base64": "npm:@hexagon/base64@2.0.4",
    "@hono/standard-validator": "jsr:@hono/standard-validator@^0.2.2",
    "@std/assert": "jsr:@std/assert@^1.0.17",
    "arktype": "npm:arktype@^2.1.29",
    "hono": "jsr:@hono/hono@4.11.5"
  },
  "unstable": ["kv", "bundle"],
  "deploy": {
    "org": "kuboon-tokyo",
    "app": "id-kbn-one"
  },
  "permissions": {
    "default": {
      "env": [
        "RP_ID",
        "RP_NAME",
        "IDP_ORIGIN",
        "ORIGINS",
        "PUSH_CONTACT"
      ],
      "net": ["updates.push.services.mozilla.com"],
      "read": ["."],
      "write": ["./_data"]
    }
  },
  "lint": {
    "rules": {
      "exclude": [
        "no-slow-types"
      ]
    }
  }
}
